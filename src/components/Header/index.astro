---
import { HEADER_MENU } from '../../constants/navigation';
import { Image } from 'astro:assets';
import logoImg from '@images/logo.svg';
import ThemeToggleButton from './ThemeToggleButton.astro';
import NavMenu from './NavMenu.astro';
---

<header class="inset-x-0 top-0 sticky z-50 border-b-[1px]">
  <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">Your Company</span>
        <Image src={logoImg} alt="Logo image" height={46} />
      </a>
    </div>

    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="size-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
          data-slot="icon"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>

    <div class="hidden lg:flex lg:gap-x-12">
      {
        HEADER_MENU.map(({ title, src }) => (
          <a href={src} class="text-sm/6 text-gray-900">
            {title}
          </a>
        ))
      }
    </div>

    <ThemeToggleButton />
  </nav>

  <!-- Mobile menu, show/hide based on menu open state. -->
  <NavMenu />
</header>
