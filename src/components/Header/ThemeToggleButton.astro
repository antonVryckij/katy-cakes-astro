---
import SunIcon from '@svg/sun.svg';
import MoonIcon from '@svg/moon.svg';

interface Props {
  id: string;
  class?: string;
}

const { id, class: className } = Astro.props;
---

<button
  class:list={[
    'hover:cursor-pointer hover:bg-gray-100 hover:dark:bg-gray-100/20 rounded-full p-2',
    className,
  ]}
  id={id}
>
  <SunIcon class="size-5 hidden dark:block" />

  <MoonIcon class="size-5 dark:hidden" />
</button>
