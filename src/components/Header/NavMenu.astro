---
import { HEADER_MENU } from '../../constants/navigation';
import LogoIcon from '@svg/logo.svg';
import ThemeToggleButton from './ThemeToggleButton.astro';
import CloseMenuButton from './CloseMenuButton.astro';
---

<div class="hidden lg:hidden" role="dialog" aria-modal="true" id="nav-menu">
  <!-- Background backdrop, show/hide based on slide-over state. -->
  <div class="fixed inset-0 backdrop-blur-sm z-50" id="overlay"></div>
  <div
    class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-main-bg px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
  >
    <div class="flex items-center justify-between border-b-[1px] pb-6">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">Katy Cakes Logo</span>
        <LogoIcon class="fill-secondary" height={42} width={162} />
      </a>

      <CloseMenuButton />
    </div>
    <div class="mt-6 flow-root">
      <div class="-my-6 divide-y divide-gray-500/10">
        <div class="space-y-2 py-6">
          {
            HEADER_MENU.map(({ title, src }) => (
              <a
                href={src}
                class="-mx-3 block rounded-lg px-3 py-2 text-base/7 hover:bg-gray-100/20"
              >
                {title}
              </a>
            ))
          }
        </div>
        <div class="py-6">
          <ThemeToggleButton id="nav-menu-theme-toggle" />
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const overlay = document.getElementById('overlay');
  const navMenu = document.getElementById('nav-menu');

  overlay?.addEventListener('click', () => {
    if (!navMenu?.classList.contains('hidden')) {
      navMenu?.classList.add('hidden');
    }
  });
</script>
