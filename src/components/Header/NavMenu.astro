---
import { HEADER_MENU } from '../../constants/navigation';
import { Image } from 'astro:assets';
import logoImg from '@images/logo.svg';
import ThemeToggleButton from './ThemeToggleButton.astro';
---

<div class="lg:hidden" role="dialog" aria-modal="true">
  <!-- Background backdrop, show/hide based on slide-over state. -->
  <div class="fixed inset-0 z-50"></div>
  <div
    class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
  >
    <div class="flex items-center justify-between border-b-[1px] pb-6">
      <a href="/" class="-m-1.5 p-1.5">
        <Image src={logoImg} alt="Logo image" height={36} />
      </a>
      <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
        <span class="sr-only">Close menu</span>
        <svg
          class="size-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
          data-slot="icon"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="mt-6 flow-root">
      <div class="-my-6 divide-y divide-gray-500/10">
        <div class="space-y-2 py-6">
          {
            HEADER_MENU.map(({ title, src }) => (
              <a
                href={src}
                class="-mx-3 block rounded-lg px-3 py-2 text-base/7 text-gray-900 hover:bg-gray-50"
              >
                {title}
              </a>
            ))
          }
        </div>
        <div class="py-6">
          <ThemeToggleButton />
        </div>
      </div>
    </div>
  </div>
</div>
